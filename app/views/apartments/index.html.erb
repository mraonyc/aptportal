<h1>Listing apartments</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Photo</th>
    <th>Lease</th>
    <th>Rent</th>
    <th>Rooms</th>
    <th>Area</th>
    <th>Lease expiration</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @apartments.each do |apartment| %>
  <tr>
    <td><%= apartment.name %></td>
    <td><%= image_tag(apartment.photo) %></td>
    <td><%= apartment.lease %></td>
    <td><%= apartment.rent %></td>
    <td><%= apartment.rooms %></td>
    <td><%= apartment.area %></td>
    <td><%= apartment.lease_expiration %></td>
    <td><%= link_to 'Show', apartment %></td>
    <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
    <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

